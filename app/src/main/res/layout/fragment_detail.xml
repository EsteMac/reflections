<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.android.flix.app.DetailActivityFragment">

        <ImageView
            android:id="@+id/movie_thumb"
            android:layout_width="80dp"
            android:layout_height="150dp"
            android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/movie_thumb"
            android:layout_alignParentTop="true"
            android:paddingLeft="8dp"
            android:textStyle="bold"
            android:textSize="32dp"
            android:textColor="#212121"/>

        <TextView
            android:id="@+id/rating_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_text"
            android:layout_toEndOf="@id/movie_thumb"
            android:layout_toRightOf="@id/movie_thumb"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:textSize="16dp"
            android:text="@string/rating_text"/>

        <TextView
            android:id="@+id/rating_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_text"
            android:layout_toRightOf="@id/rating_text"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#212121"/>

        <TextView
            android:id="@+id/popularity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating_text"
            android:layout_toRightOf="@id/movie_thumb"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:textSize="16dp"
            android:text="@string/popularity_text"/>

        <TextView
            android:id="@+id/popularity_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating_score"
            android:layout_toRightOf="@id/popularity_text"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#212121"/>

        <TextView
            android:id="@+id/released_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/popularity_text"
            android:layout_toRightOf="@id/movie_thumb"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:textSize="16dp"
            android:text="@string/released_text"/>

        <TextView
            android:id="@+id/released_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/popularity_score"
            android:layout_toRightOf="@id/released_text"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#212121"/>

        <TextView
            android:id="@+id/overview_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/released_text"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:textSize="16dp"
            android:text="@string/overview_text"/>

        <TextView
            android:id="@+id/movie_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/released_text"
            android:layout_toRightOf="@id/overview_text"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:textSize="16dp"
            android:textColor="#212121"/>

    </RelativeLayout>

</ScrollView>